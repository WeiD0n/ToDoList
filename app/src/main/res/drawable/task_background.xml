<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Background Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#f0f0f0"/> <!-- Main background color -->
            <corners android:radius="8dp"/>  <!-- Rounded corners for the background -->
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/> <!-- Padding for content inside -->
        </shape>
    </item>
</layer-list>
